#!/bin/bash

menu_src () {
bot_retorno="=========COMANDOS=========\n"
	 if [[ $(echo $permited|grep "${chatuser}") = "" ]]; then
		 if [[ $(cat ${CID}|grep "${chatuser}") = "" ]]; then
			 bot_retorno+="/ID (muestra sus ID)\n"
			 bot_retorno+="/menu (muestra este menu)\n"
			 bot_retorno+="/ayuda (ayuda de los comandos)\n"
			 bot_retorno+="$LINE\n"
			 msj_fun
		 else
			 bot_retorno+="/ID (muestra sus ID)\n"
			 bot_retorno+="/instal (link de instalacion)\n"
			 bot_retorno+="/menu (muestra este menu)\n"
			 bot_retorno+="/ayuda (ayuda de los comandos)\n"
			 bot_retorno+="$LINE\n"
			 menu_print
		 fi
		 
	 else
		 unset PID_GEN
		 PID_GEN=$(ps x|grep -v grep|grep "http-server.sh")
		 [[ ! $PID_GEN ]] && PID_GEN='(Offline) âŒ' || PID_GEN='(Online) âœ…'

		 unset usadas
		 usadas="$(cat /etc/http-instas)"
		 [[ ! $usadas ]] && k_used="0" || k_used="$usadas"
		 
		 bot_retorno+="Gen $PID_GEN | Keys Used [$k_used]\n"

		 bot_retorno+="$LINE\n"
		 bot_retorno+="ğŸ–¥ï¸ /infosys (info del sistema)ğŸ–¥ï¸\n"
		 bot_retorno+="ğŸ§¾/list (lista de ID permitidas)ğŸ§¾\n"
		 bot_retorno+="âš¡/instal (link de instalacion)âš¡\n"
		 bot_retorno+="ğŸš€/menu (muestra este menu)ğŸš€\n"
		 bot_retorno+="ğŸ¤”/ayuda (ayuda de los comandos)ğŸ¤”\n"
		 bot_retorno+="ğŸ“/cache (Limpiar cache Ram)ğŸ“\n"
		 bot_retorno+="â™»ï¸/update (actualiza el BotGen)â™»ï¸\n"
		 bot_retorno+="ğŸ›¡ï¸/reboot (Reinicia el servidor vps)ğŸ›¡ï¸\n"
		 bot_retorno+="$LINE\n"
		 menu_print
	 fi	
}
